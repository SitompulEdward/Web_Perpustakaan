<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tabel Buku</h4>
                <p class="card-description">
                    <a asp-controller="Buku" asp-action="Create">Tambah Buku</a>
                </p>
                <div class="table-responsive">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Gambar)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Judul_Buku)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pengarang)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Penerbit)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tahun_Terbit)
                                </th>
                                <th>
                                    Opsi
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/image/@item.Gambar)" alt="image" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Judul_Buku)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pengarang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Penerbit)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tahun_Terbit)
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" style="width:80px; font-size: small">Edit</a>
                                        <a class="btn btn-warning" style="width: 80px; font-size: small">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>