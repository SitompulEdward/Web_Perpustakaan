@model Buku

@{
    Layout = "_LayoutMain";
}


<div class="align-items-center">
    <h3>Tambah Buku</h3>
</div>
<hr />

<form asp-action="Create" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Judul Buku</label>
        <input asp-for="Judul_Buku" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Pengarang</label>
        <input asp-for="Pengarang" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Penerbit</label>
        <input asp-for="Penerbit" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Tahun Terbit</label>
        <input asp-for="Tahun_Terbit" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Gambar">Pilih Gambar</label>
        <input asp-for="Gambar" type="file" class="form-control-file">
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>